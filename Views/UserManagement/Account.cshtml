@model MVCProject.DAL.URM00

@{
    ViewBag.Title = "Hesabım";
    MVCProject.DAL.URM00 loginUser = (MVCProject.DAL.URM00)Model;

    string personImage = string.Empty;
    string personNoImage = "";

    if (loginUser.URM00_IMG != null && loginUser.URM00_IMG.Length > 0)
    {
        personImage = string.Format("data:image/png;base64, {0}", Convert.ToBase64String(loginUser.URM00_IMG));
    }
    else
    {
        personImage = string.Format("data:image/png;base64, {0}", personNoImage);
    }
}

<div class="col-md-9 col-md-push-3">
    <div class="page-header text-center">
        <h1>Hesabım</h1>
        <p>Hesap bilgilerini güncelle</p>
    </div><!-- End .page-header -->

    @using (Html.BeginForm("_UpdateInformation", "UserManagement", FormMethod.Post, new { @id = "formAccount", @enctype = "multipart/form-data", @class = "signup-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="row">
            <input type="hidden" name="URM00_CODE" value="@loginUser.URM00_CODE">
            <div class="col-sm-12">
                <div class="form-group text-center">
                    <img class="img-circle" src="@personImage" alt="@loginUser.FIRSTNAME" title="@loginUser.FIRSTNAME" width="200px" height="200px" />
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Ad*</label>
                    <input type="text" class="form-control" required name="FIRSTNAME" value="@loginUser.FIRSTNAME">
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Soyad*</label>
                    <input type="text" class="form-control" required name="SURNAME" value="@loginUser.SURNAME">
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Email*</label>
                    <input type="email" class="form-control" required name="EMAIL" value="@loginUser.EMAIL" disabled>
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->
        </div><!-- End .row -->

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Şifre*</label>
                    <input type="password" class="form-control" required name="URM00_PASSWD">
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Telefon*</label>
                    <input type="text" class="form-control" required name="PHONE_1" value="@loginUser.PHONE_1">
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Resim*</label>
                    <input type="file" class="form-control" name="URM00_IMG">
                </div><!-- End .form-group -->
            </div><!-- End .col-sm-4 -->
        </div><!-- End .row -->

        <div class="clearfix form-action">
            <input type="submit" class="btn btn-primary min-width" value="Güncelle">
        </div><!-- End .form-action -->
    }
</div><!-- End .col-md-9 -->
